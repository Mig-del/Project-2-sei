
<%- include('../partials/header') %>


<section id="show-page">
    <div>Location:
        <%= trip.location%> 
    </div><br>
    <div>Hotel:
        <%= trip.hotel%> 
    </div><br>
    <div>Guest:
        <%= trip.guest%> 
    </div><br>
    <div>Check-In:
        <%= trip.checkIn%> 
    </div><br>
    <div>Check-Out:
       <%= trip.checkOut%>
    </div><br>
    <div>Activity:
        <%= trip.activity%> 
    </div><br>
    <div>Car Rental:
        <%= trip.carRental%> 
    </div><br>
    <div>Price: $
        <%= trip.price %> 
    </div>

    <!-- add to vacations button or "+"-->
<br><br>
<h2>Share your Experience!</h2>

    <% if (user) { %>

        <form id="add-review-form" method="POST" action="/trips/<%= trip._id %>/reviews">
            
          <label>Review:</label>
          <textarea name="content"></textarea>
          <label>Rating:</label>
          <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
          <input type="submit" value="Add Review">
        </form>
    <% } %> 

        <% if (trip.reviews.length) { %>
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Review</th>
                  <th>Rating</th>
                </tr>
              </thead>
              <tbody>
                <% let total=0 %>
                  <% trip.reviews.forEach(function(r) { %>
                    <% total +=r.rating %>
                      <tr>
                        <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"><%= r.userName %></td>
                        <td>
                          <%= r.createdAt.toLocaleDateString() %>
                        </td>
                        <td>
                          <%= r.content %>
                        </td>
                        <td>
                          <%= r.rating %>
                        </td>
                        <td>
                          <% if (user && user._id.equals(r.user)) { %>
                            <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                              <button type="submit">X</button>
                            </form>
                          <% } %>
                        </td>
                      </tr>
                      <% }); %>
                        <tr>
                          <td colspan="2"></td>
                          <td><strong>
                              <%= (total / trip.reviews.length).toFixed(1) %>
                            </strong></td>
                        </tr>
              </tbody>
            </table>
            <% } else { %>
              <h5>No Reviews Yet</h5>
              <% } %>

              <%- include('../partials/footer') %>
        
    