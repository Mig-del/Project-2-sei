<%- include('../partials/header') %>
<% if (user) { %>
<div class="container">
  <table class="table table-striped">
    
      <thead>
          <div>
            
                <img src="images/shore.jpeg">
              
          </div>
          <tr>
              <th>Your Reservations</th>
              
          </tr>
      </thead>
      <tbody><tr>
       
        <th scope="col">Location </th>
        <th scope="col">Hotel </th>
        <th scope="col">Guest</th>
        <th scope="col">Check<br>In </th>
        <th scope="col">Chect<br>Out </th>
        <th scope="col">Activity </th>
        <th scope="col">Car<br>Rental </th>
        <th scope="col">Price</th>
        <th scope="col">View Details</th>
    </tr>
          <% trips.forEach(function(t){ %> 
            
          <tr>
              <td><%= t.location %> </td>
              <td><%= t.hotel %></td>
              <td><%= t.guest %> guest </td>
              <td><%= t.checkIn %> </td>
              <td><%= t.checkOut %></td>
              <td><%= t.activity %> </td>
              <td><%= t.carRental %></td>
              <td>$<%= t.price %> </td>
              <td><a href="/trips/<%= t._id %>">DETAILS</a></td>
          </tr>    
         <%  }); %> 
      </tbody>
  </table>
    
</div>
<% } %> 
<%- include('../partials/footer') %>


